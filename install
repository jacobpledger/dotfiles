#!/bin/sh

# ******************************************************************************
# NOTE: This is meant to be run on *my* Xubuntu system. It might accidentally
# ruin a Gnome-shell based environment. I strongly suggest auditing the packages
# before use.
# ******************************************************************************

# Get the codename of the Ubuntu release for sources that require it.
VERSION=`lsb_release -c | cut -f2`

sudo apt update

# ******************************************************************************
# Remove Junk
# ******************************************************************************
sudo apt purge -y \
	abiword \
	aisleriot \
	brasero \
	catfish \
	cheese \
	five-or-more \
	four-in-a-row \
	gconf2 \
	gnome-clocks \
	gnome-dictionary \
	gnome-fonts \
	gnome-mahjongg \
	gnome-mines \
	gnome-mpv \
	gnome-nibbles \
	gnome-robots \
	gnome-sound-recorder \
	gnome-sudoku \
	gnome-terminal \
	gnumeric \
	guvcview \
	hexchat \
	hitori \
	iagno \
	inkscape \
	lightsoff \
	mtpaint \
	mpv \
	onboard \
	onboard-data \
	parole \
	pidgin \
	pidgin-data \
	pidgin-otr \
	pidgin-libnotify \
	sgt-puzzles \
	simple-scan \
	swell-foop \
	sylpheed \
	tali \
	totem \
	thunderbird \
	ubuntu-mate-welcome \
	vlc \
	xfburn \
	xfce4-dict \
	xfce4-notes \
	xul-ext-ubufox

# ******************************************************************************
# Add Repos
# ******************************************************************************

# Some prereqs
sudo apt install -y apt-transport-https ca-certificates software-properties-common gnupg

# Docker (docker-ce, docker-compose)
wget -qO - https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $VERSION stable"

# VS Code
wget -qO - https://packages.microsoft.com/keys/microsoft.asc | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main"

# Spotify
wget -qO - https://download.spotify.com/debian/pubkey.gpg | sudo apt-key add -
echo "deb http://repository.spotify.com stable non-free" | sudo tee /etc/apt/sources.list.d/spotify.list

# Google Cloud (google-cloud-sdk)
wget -qO - https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key --keyring /usr/share/keyrings/cloud.google.gpg add -
echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | sudo tee -a /etc/apt/sources.list.d/google-cloud-sdk.list

# QGIS
wget -qO - https://qgis.org/downloads/qgis-2019.gpg.key | sudo apt-key add -
echo "deb [arch=amd64] https://qgis.org/ubuntu/ $VERSION main" | sudo tee -a /etc/apt/sources.list

sudo apt update

# ******************************************************************************
# Install packages
# ******************************************************************************

# install separately so failures don't cascade
sudo apt install -y audacity
sudo apt install -y code
sudo apt install -y docker-ce
sudo apt install -y docker-compose
sudo apt install -y firefox
sudo apt install -y git
sudo apt install -y google-cloud-sdk
sudo apt install -y htop
sudo apt install -y libreoffice
sudo apt install -y ntp  # network time sync
sudo apt install -y openssh-server
sudo apt install -y openssh-sftp-server
sudo apt install -y python-pip
sudo apt install -y python-future
sudo apt install -y python3
sudo apt install -y python3-future
sudo apt install -y snapd
sudo apt install -y spotify-client
sudo apt install -y tmux
sudo apt install -y transmission
sudo apt install -y xfce4-appmenu-plugin
sudo apt install -y vim
sudo apt install -y zsh  # Use zsh for Mac compatibility

# Now clean up
sudo apt autoremove

# *****************************************************************************
# Snaps
# *****************************************************************************

sudo snap install hiri
sudo snap install --classic slack

# ******************************************************************************
# Other
# ******************************************************************************

# Finish Docker Setup
sudo usermod -aG docker $(whoami)

# Set zsh as default shell
sudo usermod -s /usr/bin/zsh $(whoami)

# Rust
curl https://sh.rustup.rs -sSf | sh

# ******************************************************************************
# Continue and install symlinks and config files
# ******************************************************************************

cd script
./bootstrap
