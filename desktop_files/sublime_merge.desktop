[Desktop Entry]
Version=1.0
Type=Application
Name=Sublime Merge
GenericName=Git Client
Comment=Sublime Merge is a Git client, from the makers of Sublime Text
Exec=/opt/sublime_merge/sublime_merge %F
Terminal=false
MimeType=text/plain;
Icon=sublime-merge
Categories=Development;
StartupNotify=true
Actions=new-window;new-background-window;

[Desktop Action new-window]
Name=New Window
Exec=smerge -n

[Desktop Action new-background-window]
Name=New Background Window
Exec=smerge -n -b